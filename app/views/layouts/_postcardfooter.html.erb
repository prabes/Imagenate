<div class="row user-interaction">
    <div class="col-sm-2">
      <% pre_like = post.likes.find { |like| like.user_id == current_user.id} %> 
      <% if pre_like %> 
        <%= button_to  post_like_path(post, pre_like), class: "btn btn-link btn-small", method: :delete do %> 
          <i class="fa fa-heart fa-2x unlike"> </i> 
        <%end%> 
      <%else %> 
        <%= button_to post_likes_path(post), method: :post, class: "btn btn-link btn-small" do %>
          <i class="fa fa-heart-o fa-2x"> </i> 
        <%end%>
      <%end%>   
      
    </div>
    <div class="col-sm-2">
        <i class="fa fa-comment-o fa-2x" id= '<%="#{post.id}"%>' onClick= "focusOnCommentField(event)"></i>
    </div>
    <div class="col-sm-2">
      <i class="fa fa-external-link fa-2x"></i>
    </div>
    <div class="col-sm-6 like-com comment">
      <strong><%= post.likes.count %></strong> <%=(post.likes.count) == 1 ? 'Like' : 'Likes'%>
      <strong><%= post.comments.count%></strong> <%= (post.comments.count) == 1 ? 'Comment' : 'Comments'%>
      <p> <%=post.updated_at%> </p> 
    </div>
  </div>