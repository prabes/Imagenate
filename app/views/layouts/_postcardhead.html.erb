<% if post %>	
	<div class="row">
		<div class="col-sm-2 dp p-0">
				<%if post.user.profile.image.length > 0 %> 
		  		<center> <%=image_tag(post.user&.profile&.image&.last&.image&.url(:thumb), size: '60x60')%> </center>
				<%end%>
		</div>
		<div class="col-sm-10 font-weight-bold pt-3">
		  <span> <%=link_to post.user&.profile&.username, profile_path(current_user), class: 'text-dark'%> </span>
		</div>
	</div>
<%end%>