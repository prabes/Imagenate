<div class="card w-100 p-20" >
  <%= render partial: 'layouts/postcardhead', locals: {post: @posts.first}%>
  <div class="card-body">
    <h3 class="card-title font-weight-bold"> <%=current_user.profile.name%> </h3>
    <p class="card-text"><%=current_user.profile.bio%></p>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-sm-6">
        <%= button_to 'Create Post',new_post_path, method: :get, class: "btn btn-default border w-1" %>
      </div>
      <div class="col-sm-6">
        <%= button_to 'Edit Profile',new_post_path, method: :get, class: "btn btn-default border" %>
      </div>
    </div>
  </div>
  <%= render partial: 'layouts/suggested'%>
</div>