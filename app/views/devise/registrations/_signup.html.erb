<div class="row login">
	<%=render "shared/logo"%>
  <div class="border-right">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|%>
      <div class="fields mr-2">
        <div class="form-group">
          <%= f.label :email, class: 'text-secondary'%><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'form-control'%>
        <div>
        <div class="form-group">
  	  	  <%= f.label :password, class:'text-secondary' %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class:'form-control text-secondary' %>
  		    <% if @minimum_password_length %>
            <em class="text-secondary">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %> <br/>
        </div>
        <div class="form-group">
  	      <%= f.label :password_confirmation, class:'text-secondary' %><br />
  	      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password", class:'form-control' %>
  		  </div>
       
        <% resource.build_profile%>
          <%= f.fields_for :profile  do |p|%>
        <div class="form-group">
          <%= p.label :name, class:'text-secondary'  %><br/>
          <%= p.text_field :name, placeholder: "Name", class:'form-control' %>
        </div>
        <div class="form-group">
          <%= p.label :username, class:'text-secondary'  %><br/>
          <%= p.text_field :username, placeholder: "Username", class:'form-control' %>
        </div>
        <div class="form-group">
          <%= p.label :website, class:'text-secondary'  %> <br/>
          <%= p.text_field :website, placeholder: "Website", class:'form-control' %>
        </div>
        <div class="form-group">  
          <%= p.label :phone_no, class:'text-secondary'  %> <br/>
          <%= p.text_field :phone_number, placeholder: "Phone Number", class:'form-control'%>
        </div>
      <%end%>
        <div class="actions signin-button">
          <%= f.submit "Sign Up", class: 'btn btn-outline-secondary' %>
        </div>
      </div>
    <%end%>
  <div>
	<div class="dropdown-divider"></div>
  <%= render partial: "devise/shared/links" %>
</div>


