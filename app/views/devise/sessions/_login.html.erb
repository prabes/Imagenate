<div class="row login bg-white">
	<%= render "shared/logo" %>
	<div class="border-right">
	  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'px-4 py-3 pt-3') do |f| %>
  	<div class="fields mr-2">
			<div class="form-group">
  	  	<%= f.label :email , class: 'text-secondary'%><br />
  	  	<%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'form-control'%>
  		</div>
			<div class="form-group">
  	  	<%= f.label :password, class:'text-secondary' %><br />
  	  	<%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:'form-control' %>
  		</div>
			<% if devise_mapping.rememberable? %>
  	    <div class="text-secondary">
  	   	 <%= f.check_box :remember_me %>
  	   	 <%= f.label :remember_me %>
  	    </div>
  	  <% end %>
			<div class="actions signin-button">
  	  	<%= f.submit "Log in", class: 'btn btn-outline-secondary' %>
  		</div> 
		</div>
	<%end%>
	<div class="dropdown-divider"></div>
	  <%= render partial: "devise/shared/links" %>
	</div>
</div>